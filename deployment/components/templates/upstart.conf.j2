description "Apollo API"
author "StarterSquad"

start on runlevel [2345]
stop on runlevel [016]

respawn
console log
setuid {{ansible_user_id}}
setgid {{ansible_user_id}}
chdir {{install_dir}}/server

exec /usr/local/bin/gunicorn --workers 2 --bind 0.0.0.0:8000 --log-file {{log_file_path}} --log-level debug main:app
